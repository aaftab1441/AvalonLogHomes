@page "/contact-information"
@model BA.AvalonLogHomes.Pages.ContactModel
@using reCAPTCHA.AspNetCore
@using reCAPTCHA.AspNetCore.Versions;
@using Microsoft.Extensions.Options
@inject IOptions<RecaptchaSettings> RecaptchaSettings
@{
    ViewData["Title"] = "Contact Us";
    ViewData["Description"] = "Contact us at Avalon Log Homes";
    ViewData["Keywords"] = "";
}
<div id="nav_left">
    <partial name="_NavigationStandardPartial" />
</div>
<div id="content">
    <partial name="_SandbagsPartial" />
    <h1>
        Contact Us
    </h1>
    @using (@Html.BeginForm(null, null, FormMethod.Post, new { id = "main", @class = "contact" }))
    {
        @Html.ValidationSummary(true);
        <table>
            <tr>
                <td>
                    Name:
                </td>
                <td>
                    <input asp-for="contactUsModel.xNVzAName" type="text" />
                </td>
            </tr>
            <tr>
                <td>
                    Email:
                </td>
                <td>
                    <input asp-for="contactUsModel.CsKTVEmail" type="text" />
                </td>
            </tr>
            <tr>
                <td>
                    Phone:
                </td>
                <td>
                    <input asp-for="contactUsModel.MUYPQPhone" type="text" />
                </td>
            </tr>
            <tr>
                <td>
                    How did you hear about us?
                </td>
                <td>
                    <input asp-for="contactUsModel.Referral" type="text" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    Message:
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <textarea asp-for="contactUsModel.Comments">
</textarea>
                </td>
            </tr>
            <tr>
                <td class="align-center" colspan="2">
                    @(Html.Recaptcha<RecaptchaV3HiddenInput>(RecaptchaSettings.Value))
                    <input type="submit" value="Submit">
                    <div class="secondary-items">
                        <label for="Name">Name</label><input name="Name" type="text" autocomplete="off" />
                        <label for="Email">Email</label><input name="Email" type="text" autocomplete="off" />
                        <label for="Phone">Phone</label><input name="Phone" type="text" autocomplete="off" />
                        <label for="Comments">Comments</label><textarea name="Comments" autocomplete="off"></textarea>
                    </div>
                </td>
            </tr>
        </table>
    }
<p>
    Avalon Contact: Clarence Pond 1801 S. Camas St. Nampa, Idaho 83686 208-467-6098 clarencepond@gmail.com
</p>
</div>